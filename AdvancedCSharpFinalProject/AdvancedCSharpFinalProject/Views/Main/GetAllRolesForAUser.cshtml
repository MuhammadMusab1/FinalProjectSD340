@{
}
@model List<string>
<h2>Show All Roles of A User</h2>
<form method="get" asp-action="GetAllRolesForAUser">
    <select asp-items="@ViewBag.usersList" name="userId">

    </select>
    <button type="submit">
        Show
    </button>
</form>

@if(Model.Any())
{
    <h2 style="margin-top: 1rem;">@ViewBag.UserName's Roles</h2>
    @foreach(string roleName in Model)
    {
        <h3 style="margin-top: 1rem;">@roleName</h3>
    }
}
else
{
    <div style="margin-top: 2rem;">Nothing to Show!!</div>
}
<h3><a asp-action="Index">Back to Index</a></h3>
